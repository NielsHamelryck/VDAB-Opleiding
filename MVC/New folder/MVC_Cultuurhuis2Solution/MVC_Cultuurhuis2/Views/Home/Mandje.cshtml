@using System.Drawing
@model List<MVC_Cultuurhuis2.Models.MandjeItem>

@{
    ViewBag.Title = "Mandje";
}

<div class="jumbotron">
    <h1>Het Cultuurhuis <img src="~/Images/mandje.png"/>
    </h1>

    <p>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Tickets kiezen &raquo;</a>
        <a href="@Url.Action("Bevestiging", "Home")" class="btn btn-primary">Kassa &raquo;</a>
    </p>

</div>

<p class="lead alert alert-info ">Inhoud van uw winkelmandje</p>
<form method="post" action="~/Home/Verwijderen">
    <table class="table">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Titel</th>
                <th>Uitvoerders</th>
                <th>Prijs</th>
                <th>Plaatsen</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-md-2">@Html.DisplayFor(m => item.Datum)</td>
                    <td class="col-md-3">@item.Title</td>
                    <td class="col-md-3">@item.Uitvoerders</td>

                    <td class="col-md-1">@Html.DisplayFor(m => item.Prijs)</td>
                    <td class="col-md-1">@item.Plaatsen</td>
            <td class="col-md-2 text-center">
                <input type="checkbox" name="@item.VoorstellingsNr" />
            </td>
        </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td class="text-center">
                    <input type="submit" class="btn" value="Selectie verwijderen" />
                </td>
            </tr>
        </tfoot>
    </table>
</form>
<p class="alert alert-info">Te betalen : @(String.Format("{0:€ #,##0.00}",ViewBag.teBetalen))
</p>

