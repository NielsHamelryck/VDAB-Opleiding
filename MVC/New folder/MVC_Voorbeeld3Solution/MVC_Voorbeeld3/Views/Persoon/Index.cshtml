@using MVC_Voorbeeld3.Models
@model List<Persoon>

    @{
        ViewBag.Title = "Personen";
       
    }

<h2>Personen</h2>
<table class="zebra">
    <thead>
    <tr>
        <th>ID</th>
        <th>Voornaam</th>
        <th>Familienaam</th>
        <th>Score</th>
        <th>Wedde</th>
        <th>Paswoord</th>
        <th>Geboren</th>
        <th>Gehuwd</th>
        <th>Opmerkingen</th>
        <th>Geslacht</th>
        <th></th>
    </tr>
    </thead>

    <tbody>
    @foreach (var persoon in @Model)
    {
        <tr>
            <td>@persoon.ID</td>
            <td>@persoon.Voornaam</td>
            <td>@persoon.Familienaam</td>
            <td>@persoon.Score</td>
            <td>@Html.DisplayFor(model => persoon.Wedde)</td>
            <td>@persoon.Password</td>
            <td>@Html.DisplayFor(model => persoon.Geboren)</td>
            <td>@persoon.Gehuwd</td>
            <td>@persoon.Opmerkingen</td>
            <td>@persoon.Geslacht</td>
            <td><a href="@Url.Action("VerwijderForm", "Persoon", new {ID = persoon.ID})">
                <img src="~/Images/delete.png" alt="Delete"/>
            </a></td>
        </tr>
    }
    </tbody>
    
</table>
@Html.ActionLink("Opslag","Opslag","Persoon")
@Html.ActionLink("Persoon toevoegen","Toevoegen")