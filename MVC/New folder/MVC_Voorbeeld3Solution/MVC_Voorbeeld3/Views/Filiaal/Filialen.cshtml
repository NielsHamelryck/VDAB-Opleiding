@using MVC_Voorbeeld3.Models
@model List<Filiaal>

@{
    ViewBag.Title = "Filialen";
}

<h2>Filialen</h2>
<ul>
    @foreach (var filiaal in Model)
    {
        var url = "Verwijderen/" + filiaal.ID;
        <li>@filiaal.ID @filiaal.Naam @MyHelpers.Milieuscore(@filiaal.Gebouwd) @Html.DisplayFor(m => filiaal.Gebouwd)
            @Html.DisplayFor(m => filiaal.Waarde) @Html.DisplayFor(m => filiaal.Eigenaar)<a href="@url">Verwijderen</a></li>
        
    }
</ul>
