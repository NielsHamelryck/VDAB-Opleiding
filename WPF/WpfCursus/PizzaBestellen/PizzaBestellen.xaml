<Window x:Class="PizzaBestellen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pizza bestellen" Height="350" Width="525">
    <StackPanel >
        <Label HorizontalAlignment="Center" FontSize="25">Pizza bestellen</Label>
        <RadioButton  GroupName="_pizzaSize" Name="RadioButtonSmall" Margin="25 0 430 0" >small</RadioButton>

        <RadioButton  GroupName="_pizzaSize" Name="RadioButtonMedium" Margin="25 5 430 0" >medium
        </RadioButton>
        <RadioButton  GroupName="_pizzaSize" Name="RadioButtonLarge" IsChecked="True" Margin="25 5 430 0" >large
        </RadioButton>
        <Rectangle Margin="0 10 250 0" Height="1" Fill="Black"></Rectangle>
    </StackPanel>
</Window>


