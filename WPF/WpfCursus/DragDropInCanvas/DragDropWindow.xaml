<Window x:Class="DragDropInCanvas.DragDropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DragDropWindow" Height="300" Width="300">
    <StackPanel Orientation="Horizontal">
        <StackPanel Width="150">
            <Canvas Name="DropZone" Margin="10,90" Width="100" Height="100" Background="AliceBlue" AllowDrop="True">
                <Rectangle Width="20" Height="20" Fill="Coral" Margin="20"></Rectangle>
            </Canvas>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <Rectangle Width="80" Height="80" Margin="30" Fill="AntiqueWhite" AllowDrop="True" Name="DestroyObject"></Rectangle>
        </StackPanel>
    </StackPanel>
</Window>
