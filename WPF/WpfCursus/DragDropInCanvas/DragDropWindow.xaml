<Window x:Class="DragDropInCanvas.DragDropWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DragDropWindow" Height="300" Width="300">
    <StackPanel Orientation="Horizontal">
        
            <Canvas Name="DropZone" Width="300" Height="300" Background="Yellow" AllowDrop="True" Drop="DropZone_OnDrop"  >
            <Rectangle Width="80" Height="80" Margin="30" Fill="AntiqueWhite" AllowDrop="True" Name="DestroyObject" Drop="DestroyObject_OnDrop" ></Rectangle>
            <Rectangle Name="rectangle1" Width="20" Height="20" Fill="Coral" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Left="150" Canvas.Top="150" MouseMove="shape_MouseMove" MouseLeftButtonDown="shape_MouseLeftButtonDown" ></Rectangle>
                
            </Canvas>
        
        
    </StackPanel>
</Window>
