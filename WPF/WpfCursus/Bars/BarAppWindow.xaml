<Window x:Class="Bars.BarAppWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BarAppWindow" Height="350" Width="525">
    <DockPanel>
        <Menu Height="24" Name="MenuBalk" DockPanel.Dock="Top">
            <MenuItem Name="MenuItemLettertype" Header="Lettertype"><MenuItem Name="Fontjes" Header="Font">
                <MenuItem Name="Courier" Header="Courier New" IsCheckable="True" Click="Courier_OnClick"></MenuItem>
                <MenuItem Name="Arial" Header="Arial" IsCheckable="True"></MenuItem>
            </MenuItem>
            <MenuItem Name="MenuVet" Header="Vetdruk" IsCheckable="true" Click="MenuVet_OnClick"></MenuItem>
            <MenuItem Name="MenuSchuin" Header="Schuindruk" IsCheckable="True" Click="MenuSchuin_OnClick"></MenuItem>
        </MenuItem>
        </Menu>
        
            
        <ToolBar Height="24" DockPanel.Dock="Top"></ToolBar>
        <StatusBar DockPanel.Dock="Bottom" Height="24"></StatusBar>
        <TextBox Name="TextBoxVoorbeeld" Text="Dit is een voorbeeldtekst" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="24" TextWrapping="Wrap" MaxWidth="600" MaxHeight="900"></TextBox>
    </DockPanel>
</Window>
