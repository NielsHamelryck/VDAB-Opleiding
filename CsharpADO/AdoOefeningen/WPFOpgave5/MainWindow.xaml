<Window x:Class="WPFOpgave5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="375">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Content="Soort:" Margin="60 60 0 0"></Label>
                <TextBox Name="TextBoxSoort" Margin="60 60 0 0" Width="120"></TextBox>
            </StackPanel>
            <StackPanel>
                <Button Content="Bereken gemiddelde kostprijs" Width="220" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="60 20 0 0" Click="ButtonAVGPrijsSoort_OnClick"></Button>
            </StackPanel>
            <StackPanel>
                
                <Label Name="LabelStatus" Margin="60 30 0 0" Content=""></Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
