<Window x:Class="AdoWPF.SaldoRekeningRaadplegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SaldoRekeningRaadplegen" Height="300" Width="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Label Margin="60 60 0 0" Content="Rekening Nr.:"></Label>
                <TextBox Name="TextBoxRekeningNr"  Margin="20 60 0 0" Width="120" ></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Saldo" Width="120" Margin="160 40 10 0" VerticalAlignment="Top" HorizontalAlignment="Right" Click="ButtonSaldo_OnClick"></Button>
            </StackPanel>
            <StackPanel>
                <Label Name="LabelStatus" Margin="60 60 0 0" Content=""></Label>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
