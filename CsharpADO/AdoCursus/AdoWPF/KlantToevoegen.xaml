<Window x:Class="AdoWPF.KlantToevoegen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KlantToevoegen" Height="230" Width="300">
    <Grid>
      <StackPanel Orientation="Vertical">
          <StackPanel Orientation="Horizontal">
              <Label Content="Naam:" Margin="40 40 0 0"></Label>
              <TextBox Name="TextBoxNaam" Margin="20 40 0 0" Width="100"></TextBox>
          </StackPanel>
          <StackPanel>
              <Button Name="ButtonToevoegen" Content="Toevoegen" Margin="15 30 0 0" Width="100" Click="ButtonToevoegen_OnClick"></Button>
          </StackPanel>
          <StackPanel>
              <Label Name="LabelStatus" Margin="105 30 0 0"></Label>
          </StackPanel>
      </StackPanel>
    </Grid>
</Window>
