<Window x:Class="HerhalingWPFOpgave5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="325">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="50">
            <StackPanel Orientation="Horizontal">
                <Label Content="Soort: "></Label>
                <TextBox Name="TextBoxSoort" Margin="30 0" Width="130"></TextBox>
            </StackPanel>
            <Button Name="ButtonBerekenGemKostprijs" Content="Bereken gemiddelde kostrpijs" Margin="0 30 0 0" Click="ButtonBerekenGemKostprijs_OnClick"></Button>
            <Label Name="LabelKostrpijs" Margin="0 30 0 0"></Label>
        </StackPanel>
    </Grid>
</Window>
